<?xml version="1.0" encoding="utf-8"?>

<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

  <!--所有系统版本,默认样式设置-->
  <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
    <!--控制各个控件被选中时的颜色,如CheckBox RadioButton-->
    <item name="colorAccent">@color/accent</item>
    <!--ActionBar(默认的标题栏)背景色-->
    <item name="colorPrimary">@color/primary</item>
    <!--StatusBar(默认的状态栏)颜色-->
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <!--字体默认颜色-->
    <item name="android:textColorPrimary">@android:color/primary_text_light</item>

    <!--自定义状态栏颜色,属性名称在attrs.xml文件中定义-->
    <item name="statusBarColor">@color/primary_dark</item>
    <!--自定义标题栏高度,属性名称在attrs.xml文件中定义-->
    <!--<item name="toolBarSize">@dimen/abc_action_bar_default_height_material</item>-->
    <!--自定义Activity背景色,属性名称在attrs.xml文件中定义-->
    <item name="activityBackgroundColor">@color/white</item>

    <!--Window背景色-->
    <item name="android:windowBackground">@android:color/transparent</item>
    <!--Window半透明-->
    <item name="android:windowIsTranslucent">true</item>

    <item name="windowActionModeOverlay">true</item>
    <!--没有标题-->
    <item name="windowNoTitle">true</item>
    <!--没有ActionBar-->
    <item name="windowActionBar">false</item>
    <!--没有ActionBar-->
    <item name="android:windowActionBar">false</item>

  </style>

  <!-- Api19以前系统样式 -->
  <style name="AppTheme" parent="AppBaseTheme">

  </style>

</resources>
